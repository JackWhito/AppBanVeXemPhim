<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <solid
                android:color="@color/black" />

            <corners
                android:radius="5dp" />

            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>

            <solid
                android:color="@color/black" />            <!-- Thiết lập màu nền cho nút -->

            <corners
                android:radius="5dp" />

            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>