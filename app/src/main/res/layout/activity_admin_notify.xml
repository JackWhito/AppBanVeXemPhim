<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Thông báo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Danh sách Bộ Phim -->
    <ListView
        android:id="@+id/listViewNotify"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="16dp" />

    <!-- Layout cho việc thêm/cập nhật Bộ Phim -->
    <LinearLayout
        android:id="@+id/layoutAddEditNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"> <!-- Ẩn layout khi không cần thiết -->

        <!-- Trường nhập Tên Bộ Phim -->
        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề" />

        <!-- Trường nhập Thời Lượng -->
        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nội dung" />

        <!-- Trường nhập Ảnh -->
        <EditText
            android:id="@+id/editTextUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User ID" />

        <!-- Nút Lưu -->
        <Button
            android:id="@+id/buttonSaveNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lưu" />

        <!-- Nút Hủy -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy" />

        <!-- Nút Xóa -->
        <Button
            android:id="@+id/buttonDeleteNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Xóa" />
    </LinearLayout>

    <!-- Nút Thêm Bộ Phim Mới -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonAddNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Thêm thông báo" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>
